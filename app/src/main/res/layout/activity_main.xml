<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_weight="1">

        <TextView
            android:id="@+id/control_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:padding="12dp"
            android:text="control"/>

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:padding="12dp"
            android:text="result"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#FF2E394B"
        android:weightSum="4"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_weight="1"
            android:weightSum="4">

            <TextView
                android:id="@+id/seven_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="7"/>

            <TextView
                android:id="@+id/four_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="4"/>

            <TextView
                android:id="@+id/one_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="1"/>

            <TextView
                android:id="@+id/delete_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="00dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="DEL"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_weight="1"
            android:weightSum="4">

            <TextView
                android:id="@+id/eight_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="8"/>

            <TextView
                android:id="@+id/five_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="5"/>

            <TextView
                android:id="@+id/two_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="2"/>

            <TextView
                android:id="@+id/zero_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="00dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_weight="1"
            android:weightSum="4">

            <TextView
                android:id="@+id/nine_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="9"/>

            <TextView
                android:id="@+id/six_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="6"/>

            <TextView
                android:id="@+id/three_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="3"/>

            <TextView
                android:id="@+id/equal_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="00dp"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="="/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:background="#3E4C66">

            <TextView
                android:id="@+id/add_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="+"/>

            <TextView
                android:id="@+id/minus_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="-"/>

            <TextView
                android:id="@+id/multiply_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="*"/>

            <TextView
                android:id="@+id/division_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="00dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:text="รท"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>